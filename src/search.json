---
layout: null
---
[
  {% for item in site.about %}
    {
      "title"    : "{{ item.title | strip_html | escape }}",
      "section"  : "Documentation",
      "url"      : "{{ site.baseurl }}{{ item.url }}",
      "category" : "{{item.categories | join: ', '}}",
      "tags"     : "{{ item.tags | join: ', ' }}",
      "date"     : "{{ item.date }}",
      "description" : "{{item.description | strip_html | strip_newlines | escape }}"

    },
  {% endfor %}

  {% for item in site.design %}
  {% unless item.layout == "iframe" %}
    {
      "title"    : "{{ item.title | strip_html | escape }}",
      "section"  : "Design",
      "url"      : "{{ site.baseurl }}{{ item.url }}",
      "category" : "{{item.categories | join: ', '}}",
      "tags"     : "{{ item.tags | join: ', ' }}",
      "date"     : "{{ item.date }}",
      "description" : "{{item.description | strip_html | strip_newlines | escape }}"

    },
  {% endunless %}
  {% endfor %}

  {% for item in site.components %}
  {% unless item.layout == "iframe" %}
    {
      "title"    : "{{ item.title | strip_html | escape }}",
      "section"  : "Components",
      "url"      : "{{ site.baseurl }}{{ item.url }}",
      "category" : "{{item.categories | join: ', '}}",
      "tags"     : "{{ item.tags | join: ', ' }}",
      "date"     : "{{ item.date }}",
      "description" : "{{item.description | strip_html | strip_newlines | escape }}"

    },
  {% endunless %}
  {% endfor %}

  {% for item in site.content-style-guide %}
    {
      "title"    : "{{ item.title | strip_html | escape }}",
      "section"  : "Content style guide",
      "url"      : "{{ site.baseurl }}{{ item.url }}",
      "category" : "{{item.categories | join: ', '}}",
      "tags"     : "{{ item.tags | join: ', ' }}",
      "date"     : "{{ item.date }}",
      "description" : "{{item.description | strip_html | strip_newlines | escape }}"

    },
  {% endfor %}

  {% for item in site.utilities %}
  {% unless item.layout == "iframe" %}
    {
      "title"    : "{{ item.title | strip_html | escape }}",
      "section"  : "Utilities",
      "url"      : "{{ site.baseurl }}{{ item.url }}",
      "category" : "{{item.categories | join: ', '}}",
      "tags"     : "{{ item.tags | join: ', ' }}",
      "date"     : "{{ item.date }}",
      "description" : "{{item.description | strip_html | strip_newlines | escape }}"

    },
  {% endunless %}
  {% endfor %}

  {% for item in site.patterns %}
